<AnchorPane fx:id="root" minHeight="80.0" minWidth="888.0" prefHeight="640.0" prefWidth="1024.0" style="-fx-background-radius: 4; -fx-background-color: #151515;" styleClass="root" stylesheets="@../style/application.css" xmlns="http://javafx.com/javafx/8.0.321" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sharpkoi.oiduark.app.controller.HomeController">
   <children>
      <BorderPane fx:id="coverContainer" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="164.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="20.0">
         <center>
            <ImageView fx:id="coverView" mouseTransparent="true" nodeOrientation="INHERIT" opacity="0.8" pickOnBounds="true" preserveRatio="true">
               <effect>
                  <BoxBlur height="20.0" iterations="3" width="20.0" />
               </effect>
            </ImageView>
         </center>
      </BorderPane>
      <BorderPane fx:id="layout" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox fx:id="lyricsBox" alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Label style="-fx-background-color: transparent;" text="Lyrics shall be displayed here" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </center>
      </BorderPane>
      <Label fx:id="l_loading" opacity="0.0" text="Loading..." textFill="WHITE" />
   </children>
</AnchorPane>
